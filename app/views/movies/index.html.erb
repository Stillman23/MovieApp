<div class="content-block" id="portfolio">
	<div class="container">
		<section class="block-body">
  	<h1>NOW PLAYING</h1>

<!--Flash validation notice-->
		<div id="flash">
			<% flash.each do |key, value| %>
  		<div class="alert alert-<%= key %>">
      	<% if key != "timedout" %>
        <%= value %>
        <% end %>
      </div>
     <% end %>
   </div>
<!--END-->
